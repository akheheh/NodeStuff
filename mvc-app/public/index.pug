doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        link(rel="preconnect" href="https://fonts.gstatic.com")
        link(
            href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" 
            rel="stylesheet"
        )
        link(rel = "stylesheet" href = "/css/index.css")
        link(rel = "stylesheet" href = "/css/form.css")
        link(rel = "stylesheet" href = "/css/list.css")
    body
        div(class = "container")
            h1(class = "hero") List Builder
            form(action = "/added" method = "POST" class = "form")
                input(class = "inp" type="text" name = "itemName" placeholder = "Item Name")
                input(class = "inp" type="text" name = "itemPrice" placeholder = "Price")
                button(type = "submit" class = "btn-submit") Add
            if data.length > 0
                div(class = "list-container")
                    ul(class = "list")
                        li(class = "list-header")
                                p(class = "header-name") Item Name
                                p(class = "header-price") Item Price 
                        each val in data
                            if val.name && val.price
                                li(class = "list-item")
                                    p(class = "list-item-el item-name") #{val.name}
                                    p(class = "list-item-el item-price") $#{val.price}  
                                    //p()= val